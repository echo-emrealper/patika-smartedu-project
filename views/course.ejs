<!-- _header.ejs codes -->
<%- include('partials/_header'); -%>

	<!-- navigaion.ejs codes -->
	<%- include('partials/_navigation'); -%>

		<div class="all-title-box">
			<div class="container text-center">
				<h1><%= course.name %><span class="m_1"><%= course.description.slice(0,11)%>...</span></h1>
			</div>
		</div>

		<div id="overviews" class="section wb">
			<div class="container">
				<div class="row">
					<div class="col-lg-9 blog-post-single">
						<div class="blog-item">
							<div class="image-blog">
								<img src="/images/blog_single.jpg" alt="" class="img-fluid">
							</div>
							<div class="post-content">
								<div class="post-date">
									<span class="day">30</span>
									<span class="month">Nov</span>
								</div>
								<div class="meta-info-blog">
									<span><i class="fa fa-calendar"></i> <a href="#"><%=course.createdAt%></a> </span>
								</div>
								<div class="blog-title">
									<h2><a href="#" title=""><%=course.name%></a></h2>
								</div>
								<div class="blog-desc">
									<blockquote class="default">
										<%=course.description%>
									</blockquote>
								</div>
							</div>
						</div>

						<div class="blog-author">
							<div class="author-bio">
								<h3 class="author_name"><a href="#"><%= course.user.name %></a></h3>
								<h5>Teacher at <a href="/">SmartEDU</a></h5>
							</div>
						</div>

					</div><!-- end col -->
					<div class="col-lg-3 col-12 right-single">
						<div class="widget-search">
							<div class="site-search-area">
								<form method="get" id="site-searchform" action="#">
									<div>
										<input class="input-text form-control" name="search-k" id="search-k"
											placeholder="Search keywords..." type="text">
										<input id="searchsubmit" value="Search" type="submit">
									</div>
								</form>
							</div>
						</div>
						<div class="widget-categories">
							<h3 class="widget-title">Categories</h3>
							<ul>
								<li><a href="/courses">All Categories</a></li>
								<% for (let i=0; i < categories.length; i++) { %>
								<li><a href="/courses?categories=<%=categories[i].slug %>"><%= categories[i].name %></a></li>
								<% } %>
							</ul>
						</div>
					</div>
				</div><!-- end row -->
			</div><!-- end container -->
		</div><!-- end section -->
	<!-- footer.ejs codes -->
	<%- include('partials/_footer'); -%>